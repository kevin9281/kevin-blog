
.valine-wrapper #valine.v .vwrap, .valine-wrapper #valine.v .vwrap .vcontrol .vsubmit {
    background-color rgba(27, 31, 35, 0.05)
}

.valine-wrapper #valine.v .vlist .vh .vcontent {
    background-color rgba(27, 31, 35, 0.05)
}

.v .vlist .vcard .vhead .vnick:hover {
    color: #d7191a;
}

.valine-wrapper #valine.v .vlist .vh .vcontent {
    background: rgba(27,31,35,.05);
    border-radius: .25rem;
    margin: 0 .3rem;
    padding: .1rem .6rem .05rem;
}

.v .vlist .vcard .vcontent {
    word-wrap: break-word;
    word-break: break-all;
    text-align: justify;
    color: #4a4a4a;
    font-size: .875em;
    line-height: 2;
    position: relative;
    margin-bottom: .75em;
    padding-top: .625em;
}

.valine-wrapper #valine.v .vlist .vh .vmeta .vat:hover {
    color: #3eaf7c;
    border-color: #3eaf7c;
}

.valine-wrapper #valine.v .vlist .vh .vmeta .vat {
    color: #555;
    margin-right: .3rem;
    background: rgba(27,31,35,.05);
    border-radius: .25rem;
    padding: 0 .4rem;
    border: 1px solid #eaecef;
}

.v .vlist .vcard .vh .vmeta .vat {
    font-size: .8125em;
    cursor: pointer;
    float: right;
}

.valine-wrapper #valine.v .vlist .vh .vmeta {
    margin-bottom: 1rem;
}

.v .vlist .vcard .vh {
   border-bottom: none !important;
}

.valine-wrapper #valine.v .vlist .vh .vcontent p .at {
    color: #1abc9c;
}

.v * {
    box-sizing: border-box;
    line-height: 2;
    color: #555;
    transition: all .3s ease;
}

body {
    background-size: 100%;
    background-image: url(/imgs/line_bg.svg);
    background-attachment: fixed;
    background-repeat: no-repeat;
    background-position: 50%;
}

.home-blog .home-blog-wrapper .info-wrapper .num > div h3 {
    font-size: 2em;
    color: #999 !important;
}

.home-blog .home-blog-wrapper .info-wrapper .category-wrapper .category-item {
    margin-bottom: .4rem;
    padding: .4rem .8rem;
    transition: all .5s;
    border-radius: .25rem;
    background-color: #fff;
    border: none !important;
}

.home-blog .home-blog-wrapper .info-wrapper {
    background-color: #F8F8F8;
}

.home-blog .home-blog-wrapper .info-wrapper .category-wrapper .category-item a .post-num {
    color: #fff !important;
    border-radius: .25rem !important;
}

.home-blog .home-blog-wrapper .info-wrapper .category-wrapper .category-item:hover {
    transform: scale(1.04) !important;
    background: #fff !important;
}

.home-blog .info-wrapper {
    padding-top: 20px !important;
    position: sticky;
    top: 70px;
    flex: 0 0 300px;
    border-radius: .25rem;
    padding: 0 15px;
}

.home-blog .home-blog-wrapper .info-wrapper .num > div:first-child {
    border-right: 1px solid transparent !important;
}

.home-blog .info-wrapper>h4 i {
    display: none;
}

.home-blog .info-wrapper>h4:before {
    content: "";
    position: absolute;
    left: -1px;
    width: 3px;
    height: 20px;
    background-color: #3eaf7c;
}